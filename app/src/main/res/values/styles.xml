<resources>

    <style name="CustomToolBar">
        <item name="android:background">@color/colorBar</item>
        <item name="titleTextColor">@color/colorPrimaryText</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="EditSubTheme">
        <item name="android:textColor">@color/colorSubText</item>
        <item name="android:textColorHint">@color/colorSubText</item>
    </style>

    <style name="SubListItem">
        <item name="android:textColor">@color/colorSubText</item>
        <item name="android:textSize">24sp</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
