<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginTop="5dp"

    android:orientation="horizontal">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rv_subtitles_item_cv_subtitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:foreground="@android:color/transparent"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="1dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:contentPadding="0dp">


        <!--<FrameLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@drawable/border_shadow"-->
        <!--android:paddingBottom="15dp"-->
        <!--android:paddingTop="15dp">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rv_subtitles_item_tv_subtitle_title"
                style="SubListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="5dp"
                android:text="Lorem Ipsum Dolor Sit Amet"
                android:textAllCaps="true"
                android:textColor="@color/colorSubTextTitle"
                android:textSize="24sp" />

            <View
                android:id="@+id/rv_subtitles_item_vw_title_divider"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="2dp"
                android:alpha=".25"
                android:background="@color/colorItemDivider" />

            <TextView
                android:id="@+id/rv_subtitles_item_tv_subtitle_description"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:maxLines="2"
                android:padding="5dp"
                android:text="Legenda nÃºmero 1, teste aqui sor..."
                android:textColor="@color/colorSubText" />

            <View
                android:id="@+id/rv_subtitles_item_vw_date_divider"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:alpha=".25"
                android:background="@color/colorItemDivider" />

            <TextView
                android:id="@+id/rv_subtitles_item_tv_subtitle_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="5dp"
                android:text="23-03-2017 21:56"
                android:textColor="@color/colorSubTextDate"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/rv_subtitles_item_bt_undo"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="DESFAZER"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <!--</FrameLayout>-->

    </android.support.v7.widget.CardView>
</LinearLayout>